@*Define model*@
@model IEnumerable<Cinema>
@*Define ViewData*@
@{
    ViewData["Title"] = "List of Cinemas";
}

@*Write code*@

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" style="max-width:150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary text-white"><i class="bi bi-pencil-square"></i> Edit</a>|
                            <a class="btn btn-outline-info text-white"><i class="bi bi-eye"></i> View</a>|
                         </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position:fixed; right:25px; bottom:25px" class="text-white">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success">Add Cinema</a>
</div>